<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Version>0.1.1</Version>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>O2Kml</Title>
    <Company>Dani Lodholm</Company>
    <Description>Generic XMLSerializer-based serialization of KML files.</Description>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/orbitusii/O2Kml</RepositoryUrl>
    <PackageTags>KML, XML</PackageTags>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Update="LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <PropertyGroup>
    <DefaultItemExcludes>$(DefaultItemExcludes);UnitTests\**</DefaultItemExcludes>
    <Nullable>enable</Nullable>
  </PropertyGroup>

</Project>
